@model TheQuyen.OnlinePainting.Data.Models.Comment

@{
    ViewData["Title"] = "Delete";
    Layout = "_NewLayout";
}

<h1 class="text-center text-danger">Delete</h1>

<h3 class="text-center">Bạn có chắc xóa @Html.DisplayFor(model => model.Content) ?</h3>
<div class="card table-responsive">
    <div class="card-body">
        <h4>Đánh Giá</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CommentDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CommentDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LikeCount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LikeCount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Painting)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Painting.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ParentComment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ParentComment.Content)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CommentId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>