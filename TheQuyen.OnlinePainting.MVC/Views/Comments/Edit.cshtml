@model TheQuyen.OnlinePainting.Data.Models.Comment

@{
    ViewData["Title"] = "Edit";
    Layout = "_NewLayout";
}

<h1 class="text-center">Chỉnh Sửa</h1>
<div class="card table-responsive">

    <div class="card-body">
        <h4 class="card-title">Đánh Giá</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CommentId" />
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="form-control"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CommentDate" class="control-label"></label>
                        <input asp-for="CommentDate" class="form-control" />
                        <span asp-validation-for="CommentDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LikeCount" class="control-label"></label>
                        <input asp-for="LikeCount" class="form-control" />
                        <span asp-validation-for="LikeCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerId" class="control-label"></label>
                        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaintingId" class="control-label"></label>
                        <select asp-for="PaintingId" class="form-control" asp-items="ViewBag.PaintingId"></select>
                        <span asp-validation-for="PaintingId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ParentCommentId" class="control-label"></label>
                        <select asp-for="ParentCommentId" class="form-control" asp-items="ViewBag.ParentCommentId"></select>
                        <span asp-validation-for="ParentCommentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
