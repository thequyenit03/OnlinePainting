@model IEnumerable<TheQuyen.OnlinePainting.Data.Models.Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "_NewLayout";
}

<h1 class="text-center">Đánh Giá</h1>
<p>
    <a class="btn btn-outline-info" asp-action="Create">Thêm mới</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CommentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Painting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ParentComment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CommentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Painting.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParentComment.Content)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-warning btn-sm">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>