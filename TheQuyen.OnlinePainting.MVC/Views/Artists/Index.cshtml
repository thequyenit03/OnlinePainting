@model IEnumerable<TheQuyen.OnlinePainting.Data.Models.Artist>

@{
    ViewData["Title"] = "Index";
    Layout = "_NewLayout";
}

<h1 class="text-center">Họa Sĩ</h1>
<p>
    <a class="btn btn-outline-info" asp-action="Create">Thêm mới</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                <th>@Html.DisplayNameFor(model => model.Website)</th>
                <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
                <th>@Html.DisplayNameFor(model => model.Nationality)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Website)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nationality)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ArtistId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ArtistId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ArtistId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
